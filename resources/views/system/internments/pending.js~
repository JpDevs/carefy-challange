function navIncongruents() {
    $('#navValids').removeClass('active');
    $('#navIncongruents').addClass('active')
    $('#internmentsTable').show();
    $('#patientData').hide();
}

function navValids()
{
    $('#navInternments').removeClass('active')
    $('#navData').addClass('active');
    $('#internmentsTable').hide();
    $('#patientData').show();
}
